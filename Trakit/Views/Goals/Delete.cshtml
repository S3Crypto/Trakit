@model Trakit.Models.Goal

@{
    ViewData["Title"] = "Delete Goal";
}

<h2>Delete Goal</h2>

<h4>Are you sure you want to delete this goal?</h4>

<div class="goal-details">
    <div class="goal-info">
        <dl class="row">
            <dt class="col-sm-2">Title</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.Title)</dd>

            <dt class="col-sm-2">Description</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.Description)</dd>

            <dt class="col-sm-2">Start Date</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.StartDate)</dd>

            <dt class="col-sm-2">End Date</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.EndDate)</dd>

            <dt class="col-sm-2">Status</dt>
            <dd class="col-sm-10">
                <span class="badge @(Model.IsCompleted ? "badge-success" : "badge-warning")">
                    @(Model.IsCompleted ? "Completed" : "In Progress")
                </span>
            </dd>
        </dl>
    </div>

    <form asp-action="Delete" method="post" class="delete-form">
        <input type="hidden" asp-for="Id" />
        <input type="hidden" name="__RequestVerificationToken" value="@Html.AntiForgeryToken()" />

        <div class="form-actions">
            <button type="submit" class="btn btn-danger">Delete</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>

<style>
    .goal-details {
        margin-top: 20px;
    }

    .goal-info dl {
        border: 1px solid #ddd;
        padding: 15px;
        border-radius: 10px;
    }

    .form-actions {
        margin-top: 20px;
    }

        .form-actions .btn {
            margin-right: 10px;
        }

    .badge-success {
        background-color: #28a745;
    }

    .badge-warning {
        background-color: #ffc107;
    }
</style>
