@model Trakit.Models.Goal

<h2>Goal Details</h2>

<div class="form-group">
    <label>Title:</label>
    <p>@Model.Title</p>
</div>
<div class="form-group">
    <label>Description:</label>
    <p>@Model.Description</p>
</div>
<div class="form-group">
    <label>Start Date:</label>
    <p>@Model.StartDate.ToShortDateString()</p>
</div>
<div class="form-group">
    <label>End Date:</label>
    <p>@Model.EndDate.ToShortDateString()</p>
</div>
<div class="form-group">
    <label>Status:</label>
    <p>@(Model.IsCompleted ? "Completed" : "In Progress")</p>
</div>

<p>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-secondary">Edit</a> |
    <a asp-action="Index" class="btn btn-primary">Back to List</a>
</p>
