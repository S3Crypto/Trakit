@model IEnumerable<Trakit.Models.Goal>

@{
    ViewData["Title"] = "Home Page";
}

<div class="jumbotron">
    <h1>Welcome to Trakit</h1>
    <p class="lead">Track and manage your goals effectively.</p>
</div>

<h2>Recent Goals</h2>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Start Date</th>
            <th>End Date</th>
            <th>Status</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var goal in Model)
        {
            <tr>
                <td>@goal.Title</td>
                <td>@goal.Description</td>
                <td>@goal.StartDate.ToShortDateString()</td>
                <td>@goal.EndDate.ToShortDateString()</td>
                <td>@(goal.IsCompleted ? "Completed" : "In Progress")</td>
            </tr>
        }
    </tbody>
</table>

